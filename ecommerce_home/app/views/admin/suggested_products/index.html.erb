<div class = "row product-list">
  <hr>
  <aside class="col-md-2">
    <%= render "search_form" %>
  </aside>
  <div class="col-md-10">
    <% if @suggested_products.any? %>
      <table class="table recenty-viewed">
        <thead>
          <tr>
            <th><%= t "recently.product" %></th>
            <th><%= t "recently.description" %></th>
            <th><%= t "recently.price" %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @suggested_products %>
        </tbody>
      </table>
    <% else %>
      <p class="text-info">There is no product matches your search.</p>
    <% end %>
  </div>
</div>
