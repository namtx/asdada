<%= form_tag admin_suggested_products_path, method: :get do %>
  <div>
    <%= t "search.name" %><%= text_field_tag "keyword", nil, class: "form-control" %>
  </div>
  <div class="price-slider">
    <label for="">Price</label>
    <label>€ 10</label>
    <div class="slider-wrapper">
      <%= text_field_tag "price", "", id: "price-slider", type: "text", "data-slider-min": "0",
        "data-slider-max": "1000000", "data-slider-step": "100",
        "data-slider-value": "[0,100000]",
        "data-slider-orientation": "vertical"%>
    </div>
    <label>€ 1000</label>
  </div>
  <button type="submit" class="btn btn-primary full-width-button">
    search
  </button>
<% end %>
