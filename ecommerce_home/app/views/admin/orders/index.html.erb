<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>Orders Management</h2>
    <%= form_tag admin_orders_path, method: :get, id: "seach-order", class: "search-box" do %>
      <%= select_tag "status_id",
        options_for_select(order_status_select),class: "select form-control status-id-select",
        include_blank: "All" %>
      <button class="btn btn-danger" form="seach-order" type="submit">Search</button>
    <% end %>
  </div>
</div>
<div class="row">
  <% if @orders.any? %>
    <div class="col-md-8 col-md-offset-2">
      <div class="user-table">
        <table class="table ecommerce-table">
          <thead>
            <tr>
              <th></th>
              <th><%= "Products" %></th>
              <th><%= "Total" %></th>
              <th><%= "Status" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @orders %>
          </tbody>
        </table>
        <%= will_paginate @orders %>
      </div>
    </div>
  <% else %>
  <div class="col-md-8 col-md-offset-2">
    <div class="alert alert-danger no-user-info">
      <p class="text-center">There is no order there</p>
    </div>
  </div>
  <% end %>
</div>
