<tr class="product-in-cart">
  <td class="w15">
    <%= link_to "##{order.id}", admin_order_path(order) %>
  </td>
  <td class="w45">
    <p><%= pluralize order.order_details_count, "product" %></p>
  </td>
  <td class="w15">
    <p><%= number_to_currency order.total %></p>
  </td>
  <td class="w15">
    <p><%= order.order_status.name %></p>
  </td>
  <td>
    <% if order.order_status_id == 2 %>
      <%= form_tag admin_order_path(order), method: :put, id: "change-status" do %>
        <%= hidden_field_tag :status_id, 3 %>
        <%= submit_tag "Ship", class: "btn btn-success" %>
      <% end %>

    <% end %>
  </td>
</tr>
