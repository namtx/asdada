<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>User Management</h2>
    <%= form_tag admin_users_path, method: :get, id: "seach-user", class: "search-box" do %>
        <input type="text" name="keyword" class="form-control search-query" placeholder="Search user by user name, email" />
        <button class="btn btn-danger" form="seach-user" type="submit">Search</button>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <% if @users.any? %>
    <div class="col-md-8 col-md-offset-2">
      <div class="user-table">
        <table class="table ecommerce-table">
          <thead>
            <tr>
              <th>User</th>
              <th>User name</th>
              <th>Email</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <%= render partial: "user_table", locals: {user: user} %>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @users %>
      </div>
    </div>
  <% else %>
  <div class="col-md-8 col-md-offset-2">
    <div class="alert alert-danger no-user-info">
      <p class="text-center">There is no user there</p>
    </div>
  </div>
  <% end %>
</div>
