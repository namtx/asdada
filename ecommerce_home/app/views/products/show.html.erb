<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= image_tag @product.image.url, alt: "product image", class: "img-responsive" %>
    </div>
    <div class="col-md-6">
      <h2><%= @product.name %></h2>
      <div class="row user-rate-product">
      </div>
      <i><%= pluralize(@product.rate_count, "reviews") %></i>
      <p class="description"><%= @product.description %></p>
      <h3 class="price"><%= number_to_currency @product.price %></h3>
      <a href="#" class="btn btn-primary">Add to cart</a>
    </div>
  </div>
</div>
<%= recently_viewed_products %>
