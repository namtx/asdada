<% provide :og_url, "http://www.notes.minamidev.com" %>
<% provide :og_type, "article" %>
<% provide :og_title, @product.name %>
<% provide :og_description, @product.description %>
<% provide :og_image, "http://www.levihackwith.com/wp-content/uploads/2013/03/ruby.png" %>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= image_tag @product.image.url, alt: "alt.product_image",
        class: "img-responsive" %>
    </div>
    <div class="col-md-6">
      <h2><%= @product.name %></h2>
      <% if @rating.present? %>
        <div class="product-rate" data-score="<%= @product.average_rate %>">
        </div>
      <% else %>
        <div class="row user-rate-product" product-id="<%= @product.id %>"
          user-id="<%= current_user.id %>">
        </div>
      <% end %>
      <i><%= pluralize(@product.rate_count, "review") %></i>
      <p class="description"><%= @product.description %></p>
      <%= render "layouts/facebook_share" %>
      <h3 class="price"><%= number_to_currency @product.price %></h3>
      <a href="#" class="btn btn-primary btn-add-to-cart"
        product="<%= @product.id %>"><%= t "product.add_to_cart" %></a>
      <div class="fb-comments" data-href="<%= product_url @product %>"
        data-numposts="5"></div>
    </div>
  </div>
</div>
<%= render "layouts/facebook_comment" %>
