<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "ecommerce 23", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></li>
        <li><%= link_to "Products", products_path %></li>
        <% if true %>
          <li>
            <%= link_to cart_index_path, class: "header-cart" do %>
              <i class="svg-button-cart"></i>
              <span class="cart-count">6</span>
            <% end %>
          </li>
          <li><%= link_to t("header_page.users"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("header_page.account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header_page.profile"), "#" %></li>
              <li><%= link_to t("header_page.settings"), "#" %></li>
              <li class="divider"></li>
              <li><%= link_to t("header_page.logout"), "#",
                method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
