<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header.app_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header.home"), root_path %></li>
        <li><%= link_to t("Products"), products_path %></li>
        <% if logged_in? %>
          <li>
            <%= link_to carts_path, class: "header-cart" do %>
              <%= t("header.cart") %></i><span class="badge"><%= current_order.order_details.size %> </span>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.user_name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header_page.profile"), user_path(current_user) %></li>
              <li><%= link_to t("header_page.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("header_page.logout"), logout_path,
                method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Login", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
